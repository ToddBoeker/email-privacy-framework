{
  "manifest_version": 2,
  "name": "Email Privacy Framework",
  "version": "1.0.0",
  "description": "XML-based privacy policy enforcement for emails",

  "applications": {
    "gecko": {
      "id": "email-privacy@yourdomain.com",
      "strict_min_version": "91.0"
    }
  },

  "permissions": [
    "messagesRead",
    "accountsRead",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Email Privacy",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}